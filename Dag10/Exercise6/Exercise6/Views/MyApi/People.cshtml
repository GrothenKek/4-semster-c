@model IEnumerable<Exercise6.Models.Person>


@{
    ViewBag.Title = "People";
    Layout = "~/Views/Shared/_MyLayout.cshtml";
}

<h2>People</h2>

<div class="well well-lg">
    <div class="row">
        <div class="col-md-6">
            <table style="width:100%">
                <tr>
                    <th>ID</th>
                    <th>Name</th>
                    <th>Age</th>
                    <th>Weight</th>
                    <th>Score</th>
                    <th>Accepted</th>
                </tr>

                @foreach (var p in Model) {
                    <tr>
                        <td>@p.Id</td>
                        <td>@p.Name</td>
                        <td>@p.Age</td>
                        <td>@p.Weight</td>
                        <td>@p.Score</td>
                        <td>@p.Accepted</td>
                    </tr>
                }
            </table>
        </div>
    </div>
</div>

