@model PassParametersWeb.Controllers.Parameters

@{
    ViewBag.Title = "Index";
}


<h2>Former calculation:</h2>
Result: @ViewBag.result

<hr />

<h2>New calculation:</h2>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">

        <div class="form-group">
            <div class="col-md-10">
                @Html.EditorFor(p => p, new { htmlAttributes = new { @class = "form-control" } } )
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Calculate" class="btn btn-default" />
            </div>
        </div>
    </div>
}